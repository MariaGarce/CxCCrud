@page
@model CRUDCxC.Pages.AccountEntries.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>

<body>

    <h4>AccountEntry</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AccountEntry.Id" />
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="AccountEntry.Description" class="control-label"></label>
                    <input asp-for="AccountEntry.Description" class="form-control" />
                    <span asp-validation-for="AccountEntry.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="AccountEntry.ClientId" class="control-label"></label>
                    <select asp-for="AccountEntry.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                    <span asp-validation-for="AccountEntry.ClientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="AccountEntry.AccountNumber" class="control-label"></label>
                    <input asp-for="AccountEntry.AccountNumber" class="form-control" />
                    <span asp-validation-for="AccountEntry.AccountNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="AccountEntry.MovementType" class="control-label"></label>
                    <select asp-for="AccountEntry.MovementType" class="form-control"
                        asp-items="@(ViewData["MovementTypes"] as SelectList)">
                        <option value="">Seleccione </option>
                    </select>
                    <span asp-validation-for="AccountEntry.MovementType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="AccountEntry.EntryDate" class="control-label"></label>
                    <input asp-for="AccountEntry.EntryDate" class="form-control" />
                    <span asp-validation-for="AccountEntry.EntryDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="AccountEntry.Amount" class="control-label"></label>
                    <input asp-for="AccountEntry.Amount" class="form-control" />
                    <span asp-validation-for="AccountEntry.Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="AccountEntry.Status" class="control-label"></label>
                    <select asp-for="AccountEntry.Status" class="form-control"
                        asp-items="@(ViewData["StatusList"] as SelectList)">
                        <option value="">Seleccione un estado</option>
                    </select>
                    <span asp-validation-for="AccountEntry.Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
