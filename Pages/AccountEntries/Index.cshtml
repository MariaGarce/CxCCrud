@page
@model CRUDCxC.Pages.AccountEntries.IndexModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear</a>
    </p>
    <table class="table table-white table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.AccountEntry[0].Description)</th>
                <th>@Html.DisplayNameFor(model => model.AccountEntry[0].Client)</th>
                <th>@Html.DisplayNameFor(model => model.AccountEntry[0].AccountNumber)</th>
                <th>@Html.DisplayNameFor(model => model.AccountEntry[0].MovementType)</th>
                <th>@Html.DisplayNameFor(model => model.AccountEntry[0].EntryDate)</th>
                <th>@Html.DisplayNameFor(model => model.AccountEntry[0].Amount)</th>
                <th>@Html.DisplayNameFor(model => model.AccountEntry[0].Status)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AccountEntry)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Client.IdentificationNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.AccountNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.MovementType)</td>
                    <td>@Html.DisplayFor(modelItem => item.EntryDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
