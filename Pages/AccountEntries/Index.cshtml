@page
@model CRUDCxC.Pages.AccountEntries.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntry[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntry[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntry[0].AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntry[0].MovementType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntry[0].EntryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntry[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntry[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AccountEntry) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.IdentificationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
