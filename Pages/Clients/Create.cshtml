@page
@model CRUDCxC.Pages.Clients.CreateModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>

    <h4>Client</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Client.Name" class="control-label"></label>
                    <input asp-for="Client.Name" class="form-control" />
                    <span asp-validation-for="Client.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Client.IdentificationNumber" class="control-label"></label>
                    <input asp-for="Client.IdentificationNumber" class="form-control" />
                    <span asp-validation-for="Client.IdentificationNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Client.CreditLimit" class="control-label"></label>
                    <input asp-for="Client.CreditLimit" class="form-control" />
                    <span asp-validation-for="Client.CreditLimit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Client.Status" class="control-label"></label>
                    <select asp-for="Client.Status" class="form-control"
                        asp-items="@(ViewData["StatusList"] as SelectList)">
                        <option value="">Seleccione un estado</option>
                    </select>
                    <span asp-validation-for="Client.Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
