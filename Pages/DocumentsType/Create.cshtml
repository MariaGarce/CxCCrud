@page
@model CRUDCxC.Pages.DocumentsType.CreateModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>

    <h4>Tipo de Documento</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="DocumentType.Description" class="control-label"></label>
                    <input asp-for="DocumentType.Description" class="form-control" />
                    <span asp-validation-for="DocumentType.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="DocumentType.AccountingAccount" class="control-label"></label>
                    <input asp-for="DocumentType.AccountingAccount" class="form-control" />
                    <span asp-validation-for="DocumentType.AccountingAccount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="DocumentType.Status" class="control-label"></label>
                    <select asp-for="DocumentType.Status" class="form-control"
                        asp-items="@(ViewData["StatusList"] as SelectList)">
                        <option value="">Seleccione un estado</option>
                    </select>
                    <span asp-validation-for="DocumentType.Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
