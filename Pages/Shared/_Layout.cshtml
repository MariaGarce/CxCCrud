<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CxC</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">CxC</a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="clients">
                    <span class="bi bi-plus-square-fill" aria-hidden="true"></span> Clientes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="transactions">
                    <span class="bi bi-plus-square-fill" aria-hidden="true"></span> Transacciones
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="doctypes">
                    <span class="bi bi-plus-square-fill" aria-hidden="true"></span> Tipos de Documentos
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="accountEntry">
                    <span class="bi bi-plus-square-fill" aria-hidden="true"></span> Asientos Contables
                </NavLink>
            </div>
        </nav>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js"></script>
</body>

</html>