@page
@model CRUDCxC.Pages.Transactions.CreateModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>

    <h4>Crear Transacción</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">
                        <span class="text-danger">*</span> Tipo de Movimiento
                    </label>
                    <input type="text" class="form-control" value="Débito" readonly disabled />
                    <input type="hidden" asp-for="Transaction.MovementType" value="Debit" />
                </div>

                <div class="form-group">
                    <label asp-for="Transaction.DocumentTypeId" class="control-label">
                        <span class="text-danger">*</span> Documento Contable
                    </label>
                    <select asp-for="Transaction.DocumentTypeId" class="form-control"
                        asp-items="ViewBag.DocumentTypeId"></select>
                    <span asp-validation-for="Transaction.DocumentTypeId" class="text-danger"></span>
                </div>

                <!-- Número de transacción generado automáticamente -->
                <input type="hidden" asp-for="Transaction.DocumentNumber" value="00" />

                <div class="form-group">
                    <label asp-for="Transaction.ClientId" class="control-label">
                        <span class="text-danger">*</span> Cliente
                    </label>
                    <select asp-for="Transaction.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                    <span asp-validation-for="Transaction.ClientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Transaction.Amount" class="control-label">
                        <span class="text-danger">*</span> Monto
                    </label>
                    <input asp-for="Transaction.Amount" class="form-control" min="1" step="0.01" />
                    <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");

        }
    }
</body>

</html>
