@page
@model CRUDCxC.Pages.Transactions.DetailsModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ver Transacción</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<body>
    <div class="container mt-4">
        <h3>Detalles de la Transacción</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Tipo de Movimiento</dt>
            <dd class="col-sm-9">@Model.Transaction.MovementType</dd>

            <dt class="col-sm-3">Documento Contable</dt>
            <dd class="col-sm-9">@Model.Transaction.DocumentType?.Description</dd>

            <dt class="col-sm-3">Número de Transacción</dt>
            <dd class="col-sm-9">@Model.Transaction.DocumentNumber</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.Transaction.Date.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Transaction.Client?.Name</dd>

            <dt class="col-sm-3">Monto</dt>
            <dd class="col-sm-9">@Model.Transaction.Amount.ToString("C")</dd>
        </dl>

        <div class="mt-3">
            <a asp-page="./Edit" asp-route-id="@Model.Transaction.Id" class="btn btn-primary">Editar</a>
            <a asp-page="./Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</body>

</html>
