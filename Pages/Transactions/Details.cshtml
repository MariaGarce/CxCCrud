        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Transaction.MovementType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Transaction.MovementType)
            </dd>
            <dt class="col-sm-2">
