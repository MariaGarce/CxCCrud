@page
@model CRUDCxC.Pages.Transactions.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>

<body>

    <h4>Transaction</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Transaction.Id" />
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Transaction.MovementType" class="control-label"></label>
                    <select asp-for="Transaction.MovementType" class="form-control"
                        asp-items="@(ViewData["MovementTypes"] as SelectList)">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="Transaction.MovementType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Transaction.DocumentTypeId" class="control-label"></label>
                    <select asp-for="Transaction.DocumentTypeId" class="form-control"
                        asp-items="ViewBag.DocumentTypeId"></select>
                    <span asp-validation-for="Transaction.DocumentTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Transaction.DocumentNumber" class="control-label"></label>
                    <input asp-for="Transaction.DocumentNumber" class="form-control" />
                    <span asp-validation-for="Transaction.DocumentNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Transaction.Date" class="control-label"></label>
                    <input asp-for="Transaction.Date" class="form-control" />
                    <span asp-validation-for="Transaction.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Transaction.ClientId" class="control-label"></label>
                    <select asp-for="Transaction.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                    <span asp-validation-for="Transaction.ClientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Transaction.Amount" class="control-label"></label>
                    <input asp-for="Transaction.Amount" class="form-control" />
                    <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
