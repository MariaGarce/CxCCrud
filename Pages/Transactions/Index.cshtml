@page
@model CRUDCxC.Pages.Transactions.IndexModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Transacciones</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear</a>
    </p>
    <table class="table table-white table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Transaction[0].MovementType)</th>
                <th>Tipo de Documento</th>
                <th>N&uacute;mero de transacci&oacute;n</th>
                <th>@Html.DisplayNameFor(model => model.Transaction[0].Date)</th>
                <th>Cliente</th>
                <th>Monto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transaction)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MovementType)</td>
                    <td>@item.DocumentType?.Description</td>
                    <td>@Html.DisplayFor(modelItem => item.DocumentNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@item.Client?.Name</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
